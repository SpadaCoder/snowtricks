{{ form_start(form, { 'attr': {'enctype': 'multipart/form-data'}, 'method': 'POST' }) }}
    {# {{ form_widget(form) }} #}

    {# Si le Trick a un ID, on affiche le formulaire pour les vidéos #}
    {# {% if trick.id %} #}
        {# {% include 'video/add.html.twig' %} #}
