{% extends 'base.html.twig' %}

{% block title %}Trick index{% endblock %}

{% block body %}
    <h1>Trick index</h1>

    <table class="table">
        <thead>
            <tr>

                <th>Image</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for trick in tricks %}
            <tr>
                <td>
                <a href="{{ path('app_trick_show', {'slug': trick.slug}) }}">
                    {{ trick.name }}
                    </a>
                </td>
                <td>
                    <div class=icon-btn>
                    <a href="{{ path('app_trick_edit', {'slug': trick.slug}) }}">
                    <img src="{{ asset('Images/edit-icon.png') }}" alt="Edit" width="20" height="20">
                    </a>
                    {{ include('trick/_delete_form.html.twig') }}
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_trick_new') }}">Create new</a>
{% endblock %}
